{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "skipLibCheck": false,
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    /* Linting */
//    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "./src"
  ]
}
